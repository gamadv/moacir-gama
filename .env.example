# Auth.js - Gere com: openssl rand -base64 32
AUTH_SECRET=

# Application URL
AUTH_URL=http://localhost:3000

# Google OAuth - Obtenha do Google Cloud Console
# https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Database (Neon PostgreSQL)
# Pooled connection (para a aplicação) - hostname contém "-pooler"
DATABASE_URL="postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/neondb?sslmode=require"
# Direct connection (para migrations) - hostname sem "-pooler"
DIRECT_DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"
