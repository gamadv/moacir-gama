generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  company       Company?
  assets        FinancialAsset[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Company {
  id         String           @id @default(cuid())
  name       String
  userId     String           @unique
  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  dependents Int              @default(0)
  proLabore  Int              @default(0) // centavos
  revenues   MonthlyRevenue[]
  contracts  PjContract[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
}

model PjContract {
  id        String   @id @default(cuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  valorHora Int      // centavos (R$ 150,00 = 15000)
  horasMes  Int      // centésimos de hora (160,5h = 16050)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
}

model MonthlyRevenue {
  id        String   @id @default(cuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  year      Int
  month     Int
  revenue   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyId, year, month])
  @@index([companyId])
}

model FinancialAsset {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category        String   // "renda_variavel" | "renda_fixa"
  institution     String   // Nomad, C6, BTG, Daycoval, Toro, etc.
  assetType       String   // Stocks, Crypto, CDB, LCA, Ações & FIIs
  valueBrl        Int      // centavos de reais
  valueForeign    Int?     // centavos em moeda estrangeira (nullable)
  foreignCurrency String?  // "USD" (nullable, null = só BRL)
  yieldRate       String?  // "100%", "IPCA + 9,01%", "106%" (nullable)
  notes           String?  // observações livres
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
